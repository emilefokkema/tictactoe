{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "bundler",
        "target": "ESNext",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "composite": true,
        "emitDeclarationOnly": true,
        "strict": true,
        "rootDir": "src/scripts",
        "outDir": "dist-types/src/scripts"
    },
    "include": ["src/scripts/**/*"]
}